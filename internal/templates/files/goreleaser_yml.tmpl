# goreleaser release --snapshot --clean --skip homebrew,docker

project_name: {{.ProjectName}}
version: 2

before:
  hooks:
    - go mod download

builds:
  - id: {{.ProjectName}}
    binary: {{.ProjectName}}
    dir: .
    main: main.go
    env:
      - CGO_ENABLED=0
    goos:
      - linux
    goarch:
      - amd64
      - arm64
    ldflags:
      - -X {{.GoModulePath}}/cmd.version={{"{{"}} .Version {{"}}"}}
      - -X {{.GoModulePath}}/cmd.commit={{"{{"}} .Commit {{"}}"}}
      - -X {{.GoModulePath}}/cmd.date={{"{{"}} .Date {{"}}"}}

  - id: {{.ProjectName}}-macos
    binary: {{.ProjectName}}
    dir: .
    main: main.go
    env:
      - CGO_ENABLED=0
    goos:
      - darwin
    goarch:
      - amd64
    ldflags:
      - -X {{.GoModulePath}}/cmd.version={{"{{"}} .Version {{"}}"}}
      - -X {{.GoModulePath}}/cmd.commit={{"{{"}} .Commit {{"}}"}}
      - -X {{.GoModulePath}}/cmd.date={{"{{"}} .Date {{"}}"}}

# MacOS Universal Binaries
universal_binaries:
  - id: {{.ProjectName}}-macos
    replace: true

archives:
  - id: {{.ProjectName}}-linux-archive
    ids:
      - {{.ProjectName}}

  - id: {{.ProjectName}}-archive
    ids:
      - {{.ProjectName}}-macos
    formats:
      - zip
    files:
      - none*

checksum:
  name_template: "checksums.txt"

release:
  github:
    owner: {{.GoModuleOwner}}
    name: {{.ProjectName}}
  ids:
    - {{.ProjectName}}-archive
    - {{.ProjectName}}-linux-archive
  draft: true
  replace_existing_draft: true

snapshot:
  version_template: "{{"{{"}} incpatch .Version {{"}}"}}-devel"

